        <Grid x:Name="menu" MouseLeftButtonDown="LeftClick" Height="590" Width="825"/>
        <Label x:Name="Display" Content="" Canvas.Left="622" Canvas.Top="107" Height="58" Width="113" RenderTransformOrigin="0.5,0.5" FontSize="18" FontWeight="Bold">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-6.441"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
    </Canvas>
</Window>
